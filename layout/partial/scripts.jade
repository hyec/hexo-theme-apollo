    script(async, src='https://cdn-city.livere.com/js/embed.dist.js')

//- Analytics tracking
if theme.ga
    script(async, src="https://www.googletagmanager.com/gtag/js?id=#{theme.ga}")
    script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '#{theme.ga}');