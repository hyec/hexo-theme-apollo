//- Comment
if theme.disqus
    script.
        var disqus_config = function () {
            this.page.url = '#{config.url}/#{page.path}';
            this.page.identifier = '#{page.title}';
        };
    script(async, src='https://#{theme.disqus}.disqus.com/embed.js')

